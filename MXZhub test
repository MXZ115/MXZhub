-- ðŸ“Œ Function to hide all menus
local function hideAllMenus()
    homeMenu.Visible = false
    questsAndItemsMenu.Visible = false
    raidsAndFruitsMenu.Visible = false
    visualMenu.Visible = false
    optionsMenu.Visible = false
    seaEventsMenu.Visible = false
    raceV4Menu.Visible = false
    islandsMenu.Visible = false
end

-- ðŸ“Œ Button actions to switch menus
homeButton.MouseButton1Click:Connect(function()
    hideAllMenus()
    homeMenu.Visible = true
end)

islandsButton.MouseButton1Click:Connect(function()
    hideAllMenus()
    islandsMenu.Visible = true
end)

seaEventsButton.MouseButton1Click:Connect(function()
    hideAllMenus()
    seaEventsMenu.Visible = true
end)

questsButton.MouseButton1Click:Connect(function()
    hideAllMenus()
    questsAndItemsMenu.Visible = true
end)

raceV4Button.MouseButton1Click:Connect(function()
    hideAllMenus()
    raceV4Menu.Visible = true
end)

raidsButton.MouseButton1Click:Connect(function()
    hideAllMenus()
    raidsAndFruitsMenu.Visible = true
end)

visualButton.MouseButton1Click:Connect(function()
    hideAllMenus()
    visualMenu.Visible = true
end)

optionsButton.MouseButton1Click:Connect(function()
    hideAllMenus()
    optionsMenu.Visible = true
end)

